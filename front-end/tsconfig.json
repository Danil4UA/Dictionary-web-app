{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext" ,
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",

      
      "baseUrl": ".",
       "paths": {
        "*": ["./src/*"]
       },
    

      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "compilerOptions": {
        "module": "CommonJS"
        }
    }
}
